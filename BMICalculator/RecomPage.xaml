<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.RecomPage"
             Title="RecomPage">
    <VerticalStackLayout Spacing="20">
        <Label 
            FontSize="20"
            x:Name="LblHealthRec"
            Text="Health Recommendations"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Back to User Input" VerticalOptions="End" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        <Button Text="Back to BMI Results" VerticalOptions="End" HorizontalOptions="Center" Clicked="Button_Clicked_1"/>
    </VerticalStackLayout>
</ContentPage>